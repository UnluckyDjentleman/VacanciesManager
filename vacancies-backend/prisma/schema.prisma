generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum VacancyStatus { 
  PUBLISHED
  ACCEPTED 
  DECLINED
}

model Vacancies {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  companyName String
  vacancy String
  minSalary Int @default(0)
  maxSalary Int @default(100000)
  status VacancyStatus @default(PUBLISHED)
  note String
}